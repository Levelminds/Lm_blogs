Options -Indexes
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Allow the application to serve files that live under /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{DOCUMENT_ROOT}/public/$1 -f
    RewriteRule ^(.*)$ public/$1 [L]

    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{DOCUMENT_ROOT}/public/$1 -d
    RewriteRule ^(.*)$ public/$1/ [L]

    # Expose the storage directory even when a symbolic link is not available
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^storage/(.*)$ storage/app/public/$1 [L]

    # Send the rest of the traffic to Laravel's front controller
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^ public/index.php [L]
</IfModule>
